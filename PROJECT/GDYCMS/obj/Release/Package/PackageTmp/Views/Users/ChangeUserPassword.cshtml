@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; } 
@model GDYCMS.Models.UsrsModel 
@using GDYCMS.Models.Global


<script src="/Scripts/Logic/Admin/UserChangePassword.js"></script>

@Styles.Render("~/Content/CMSStyles/Admin.css")
<div ng-app="GDYApp" ng-controller="GDYController">
    @Html.Hidden("isResulted",@Model.isResulted);


    <div id="RedirectModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">OK</h4>
      </div>
      <div class="modal-body">
        Password successfully changed
      </div>                
      <div class="modal-footer">
          <button style="margin-left:0px;" type="button" class="btn btn-primary" data-dismiss="modal" ng-click="RedirectToAdmin();">OK</button>
      </div>
    </div>
  </div>
</div>



    @using (Html.BeginForm("ChangeUserPassword","Users",FormMethod.Post)) {
        
        
            
            
        
       
            <div class="col-md-4 col-xs-4 col-centered">
            <fieldset>
                <legend>Change password</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.NewPassword) @Html.PasswordFor(m => m.NewPassword,new { @id = "NewPassword", @Name = "NewPassword" }) 
                    </li>
                    <li>
                    @Html.LabelFor(m => m.RetypeNewPassword) @Html.PasswordFor(m => m.RetypeNewPassword,new { @id = "RetypeNewPassword", @Name = "RetypeNewPassword" }) 
                    </li>
                </ol>
                <input type="submit" value="Register" />
            </fieldset>                        
            </div>
    }        
</div>

