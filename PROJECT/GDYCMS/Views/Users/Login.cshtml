@{ Layout = null; } @model GDYCMS.Models.UsrsModel
@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc.Interface

<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="/Content/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="/Content/normalize.css" />
  <link rel="stylesheet" type="text/css" href="/Content/CMSStyles/AdminStyles/LoginForm.css" />
  <meta name="viewport" content="width=device-width, init-scale=1" />
  <title>Login</title>
</head>
<body>
  <script src="/Scripts/angular.min.js" /></script>
  <script src="/Scripts/angular-cookies.min.js"></script>
  <script src="/Scripts/jquery-2.1.4.min.js" /></script>
  <script src="/Scripts/bootstrap.min.js" /></script>


<div class="container">
    @using (Html.BeginForm("Login","Users",FormMethod.Post)) { 
    @Html.AntiForgeryToken() @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to GDYCMS</h1>
            <div class="account-wall">
                <div class="form-signin">
                    @Html.TextBoxFor(m => m.UserName,new {@class = "form-control",@placeholder="Login" }) @Html.ValidationMessageFor(m => m.UserName)
                    @Html.PasswordFor(m => m.Password, new {@class="form-control",@placeholder="Password"}) @Html.ValidationMessageFor(m => m.Password)
                    @Html.Captcha(5, "CaptchaView")                                 
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                    <label class="checkbox pull-left">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        Remember me
                    </label>
                    <div class="login-error">
                        @ViewBag.CaptchaMessage
                        @ViewBag.ErrorMessage
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    }
</div>


</body>

</html>
