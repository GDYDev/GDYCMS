<div id="LinkBufferModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <div class="row">        
            <div class="col-md-12 col-xs-12">
                <select multiple="multiple" style="width:100%;height:100%;" ng-model="LinkBufferModel.SelectedLink">
                    <option ng-repeat="item in LinkBufferModel.ObjectList" value="{{item.Address}}">{{item.LinkName}}</option>
                </select>
            </div>        
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">{{LinkBufferModel.SelectedLink}}</div>
        </div>
      </div>
        <button id="CopyToClipBoardButtonID" style="margin-left:20px;" type="button" class="btn btn-success" ng-click="$('#LinkBufferModal').modal('lock');LinkBufferModel.CopyToClipBoard();">COPY TO CLIPBOARD</button>
        <button style="margin-left:50px;" type="button" class="btn btn-danger" ng-click="$('#LinkBufferModal').modal('lock');LinkBufferModel.DeleteSelected();">REMOVE</button>
        <button style="margin-left:0px;" type="button" class="btn btn-default" data-dismiss="modal">CLOSE</button>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>

